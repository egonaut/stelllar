{
  "name": "server",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/server/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/webpack:webpack",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/packages/server",
        "main": "packages/server/src/main.ts",
        "tsConfig": "packages/server/tsconfig.app.json",
        "assets": [
          "packages/server/src/assets"
        ]
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "packages/server/src/environments/environment.ts",
              "with": "packages/server/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "@nrwl/js:node",
      "options": {
        "buildTarget": "server:build"
      },
      "configurations": {
        "production": {
          "buildTarget": "server:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/server/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "packages/server/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "migration:create": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/server",
        "command": "yarn exec mikro-orm migration:create -p ./migrations",
        "forwardAllArgs": "true"
      }
    },
    "migration:up": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/server",
        "command": "yarn exec mikro-orm migration:up",
        "forwardAllArgs": "true"
      }
    },
    "migration:down": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/server",
        "command": "yarn exec mikro-orm migration:down",
        "forwardAllArgs": "true"
      }
    },
    "migration:list": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/server",
        "command": "yarn exec mikro-orm migration:list",
        "forwardAllArgs": "true"
      }
    },
    "migration:pending": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/server",
        "command": "yarn exec mikro-orm migration:pending",
        "forwardAllArgs": "true"
      }
    }
  },
  "tags": []
}
